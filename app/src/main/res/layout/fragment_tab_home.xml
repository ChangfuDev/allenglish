<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/random_word_layout"
        style="@style/DefaultClickable"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/dp12"
        android:orientation="vertical"
        android:padding="@dimen/dp12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/random_word"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="good"
                android:textColor="@color/app_color"
                android:textSize="32sp" />

            <ImageView
                android:id="@+id/update_word"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_action_update" />
        </LinearLayout>

        <TextView
            android:id="@+id/random_word_explain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp6"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.2"
            android:text="adj.好的, 优秀的, 有益的, 漂亮的，健全的
n.好处，利益, 善良, 善行, 好人
adv.同well"
            android:textSize="@dimen/sp16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="了解更多"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp16" />
    </LinearLayout>

    <TextView
        android:id="@+id/iciba_sentence"
        style="@style/DefaultClickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp12"
        android:padding="@dimen/dp12"
        android:textSize="@dimen/sp16" />
</LinearLayout>
